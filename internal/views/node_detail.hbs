<div class="container text-center">
  <div class="d-flex justify-content-start">
    <a class="previous text-start" href="/node/">
      <i class="fas fa-arrow-left me-2"></i>
      Back
    </a>
  </div>
  <div class="row">
    <h3>Node {{node.name}}</h3>
  </div>
  <div class="row">
    <table class="table table-striped table-light table-hover">
      <thead>
        <tr>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">Id Node</th>
          <th>{{node.idNode}}</th>
        </tr>
        <tr>
          <th scope="row">Name</th>
          <th>{{node.name}}</th>
        </tr>
        <tr>
          <th scope="row">Location</th>
          <th>{{node.location}}</th>
        </tr>
        <tr>
          <th scope="row">Id Hardware</th>
          <th>{{node.idHardware}}</th>
        </tr>
        <tr>
          <th scope="row">Id User</th>
          <th>{{node.idUser}}</th>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <h3>Hardware</h3>
  </div>
  <div class="row">
    <table class="table table-striped table-light table-hover">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        {{#with hardware}}
          <tr>
            <th scope="row">{{idHardware}}</th>
            <td>{{name}}</td>
            <td>{{type}}</td>
            <td>{{description}}</td>
          </tr>
        {{/with}}
      </tbody>
    </table>
  </div>
  <div class="row">
    <h3>Sensor</h3>
  </div>
  <div class="row">
    <table class="table table-striped table-light table-hover">
      <thead>
        <tr>
          <th scope="col">Id Sensor</th>
          <th scope="col">Name</th>
          <th scope="col">Unit</th>
          <th scope="col">Id Node</th>
          <th scope="col">Id Hardware</th>
        </tr>
      </thead>
      <tbody>
        {{#each sensor as |s|}}
          {{#with s}}
            <tr>
              <th scope="row">{{idSensor}}</th>
              <td>{{name}}</td>
              <td>{{unit}}</td>
              <td>{{idNode}}</td>
              <td>{{idHardware}}</td>
            </tr>
          {{/with}}
        {{/each}}
      </tbody>
    </table>
  </div>

</div>