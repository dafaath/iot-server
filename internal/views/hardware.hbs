<div class="container text-center">
  <div class="row">
    <h3>Semua Hardware</h3>
  </div>
  <div class="row">
    <table class="table table-striped table-primary">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each hardwares as |h|}}
          {{#with h}}
            <tr>
              <th scope="row">{{idHardware}}</th>
              <td>{{name}}</td>
              <td>{{type}}</td>
              <td>{{description}}</td>
            </tr>
          {{/with}}
        {{/each}}
      </tbody>
    </table>
  </div>

</div>