<section
  class="h-100 bg-image overflow-auto"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');"
>
  <div class="d-flex align-items-center h-100 gradient-custom-3 overflow-auto">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <div class="d-flex justify-content-start">
                <a class="previous text-start" href="/node/">
                  <i class="fas fa-arrow-left me-2"></i>
                  Back
                </a>
              </div>
              {{#if edit}}
                <h2 class="text-uppercase text-center mb-5">Edit Node
                  {{node.idNode}}</h2>
              {{else}}
                <h2 class="text-uppercase text-center mb-5">Create Node</h2>
              {{/if}}
              <form id="submit-form">
                <h4 class="text-center my-3 text-muted">Node Data</h4>
                <div class="form-outline mb-4">
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-control form-control-lg"
                    value="{{node.name}}"
                  />
                  <label class="form-label" for="name">Name</label>
                </div>

                <div class="form-outline mb-4">
                  <input
                    type="text"
                    id="location"
                    name="location"
                    class="form-control form-control-lg"
                    value="{{node.location}}"
                  />
                  <label class="form-label" for="location">Location</label>
                </div>

                <div class="form-outline mb-4">
                  <select
                    class="form-select form-select-lg mb-3"
                    aria-label=".form-select-lg example"
                    name="id_hardware_node"
                    id="id_hardware_node"
                  >
                    <option selected>Select Hardware Node</option>
                    {{#each nodeHardware}}
                      <option value="{{idHardware}}">{{idHardware}}
                        -
                        {{name}}
                        -
                        {{type}}</option>
                    {{/each}}
                  </select>
                </div>

                <h4 class="text-center my-3 mb-4 text-muted">Node Sensor</h4>

                <div class="row">
                  <div class="col-5">
                    <label class="form-label" for="id_hardware_sensor_1">
                      Hardware Sensor
                    </label>
                  </div>
                  <div class="col-5">
                    <label class="form-label" for="id_hardware_sensor_1">
                      Field Sensor
                    </label>
                  </div>
                </div>
                <div id="sensor-form-holder">

                </div>
                <div class="row my-3" id="sensor-form-main">
                  <div class="col-5">
                    <div class="form-outline mb-4">
                      <select
                        class="form-select form-select-lg mb-3 sensor-hardware-id"
                        aria-label=".form-select-lg example"
                        name="id_hardware_sensor[]"
                      >
                        <option value="default" selected>Select Hardware Node</option>
                        {{#each sensorHardware}}
                          <option value="{{idHardware}}">{{idHardware}}
                            -
                            {{name}}
                            -
                            {{type}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>
                  <div class="col-5">
                    <div class="form-group mb-4">
                      <input
                        type="text"
                        name="field_sensor[]"
                        class="form-control form-control-lg sensor-field"
                      />
                    </div>
                  </div>
                  <div class="col-1">
                    <div class="form-group">
                      <button
                        id="add-sensor"
                        type="button"
                        class="btn btn-success"
                        style="height: 2.8rem;"
                      >
                        <i class="fa fa-plus text-center"></i>
                      </button>
                      <button
                        type="button"
                        class="btn btn-danger remove-sensor"
                        style="height: 2.8rem; display: none;"
                      >
                        <i class="fa fa-minus text-center"></i>
                      </button>

                    </div>
                  </div>
                </div>

                <div class="d-flex justify-content-center">
                  <button
                    type="submit"
                    class="btn btn-primary btn-block btn-lg"
                  >
                    {{#if edit}}
                      Update
                    {{else}}
                      Create
                    {{/if}}
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const ID_HARDWARE_NODE = "{{node.idHardwareNode}}"; const ID_HARDWARE_SENSOR =
  JSON.parse($('<div>').html('{{idHardwareSensorString}}')[0].textContent);
  const FIELD_SENSOR = JSON.parse($('<div>').html('{{fieldSensorString}}')[0].textContent);
</script>

<script src="/static/js/node-form.js"></script>