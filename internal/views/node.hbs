<div class="container text-center">
  <div class="row">
    <h3>Semua Node</h3>
  </div>
  <div class="row">
    <table class="table table-striped table-primary">
      <thead>
        <tr>
          <th scope="col">Id Node</th>
          <th scope="col">Name</th>
          <th scope="col">Location</th>
          <th scope="col">Is Public</th>
          <th scope="col">Id Hardware Node</th>
          <th scope="col">Id Hardware Sensor</th>
          <th scope="col">Field Sensor</th>
          <th scope="col">Feed</th>
          <th scope="col">Id User</th>
        </tr>
      </thead>
      <tbody>
        {{#each nodes as |n|}}
          {{#with n}}
            <tr>
              <th scope="row">{{idNode}}</th>
              <td>{{name}}</td>
              <td>{{location}}</td>
              <td>{{isPublic}}</td>
              <td>
                {{idHardwareNode}}
              </td>
              <td>
                <ol>
                  {{#each idHardwareSensor as |id|}}
                    {{#if id.valid}}
                      <li>{{id.int64}}</li>
                    {{else}}
                      <li>null</li>
                    {{/if}}
                  {{/each}}
                </ol>
              </td>
              <td>
                <ol>
                  {{#each fieldSensor as |field|}}
                    {{#if field.valid}}
                      <li>{{field.string}}</li>
                    {{else}}
                      <li>null</li>
                    {{/if}}
                  {{/each}}
                </ol>
              </td>
              <td>
                <ol>
                  {{#each feed as |f|}}
                    {{#with f}}
                      <li> {{time}}</li>
                      <ol>
                        {{#each value as |v|}}
                          {{#if v.valid}}
                            <li>{{v.float64}}</li>
                          {{else}}
                            <li>null</li>
                          {{/if}}
                        {{/each}}
                      </ol>
                    {{/with}}
                  {{/each}}
                </ol>
              </td>
              <td>{{idUser}}</td>
            </tr>
          {{/with}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>