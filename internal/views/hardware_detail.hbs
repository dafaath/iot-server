<div class="container text-center">
  <div class="row">
    <h3>Hardware {{hardware.name}}</h3>
  </div>
  <div class="row">
    <table class="table table-striped table-primary">
      <tbody>
        <tr>
          <th scope="row">Id</th>
          <th>{{hardware.idHardware}}</th>
        </tr>
        <tr>
          <th scope="row">Nama</th>
          <th>{{hardware.name}}</th>
        </tr>
        <tr>
          <th scope="row">Tipe</th>
          <th>{{hardware.type}}</th>
        </tr>
        <tr>
          <th scope="row">Description</th>
          <th>{{hardware.description}}</th>
        </tr>
      </tbody>
    </table>
  </div>
</div>